!-- Xft settings -- !

Xft.dpi:       96
Xft.antialias: true
Xft.hinting:   true
Xft.rgba:      rgb
Xft.autohint:  false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

*background:                      #222D31
*foreground:                      #d8d8d8
*fading:                          8
*fadeColor:                       black
*cursorColor:                     #d8d8d8
*pointerColorBackground:          #2B2C2B
*pointerColorForeground:          #16A085

!! black dark/light
URxvt*color0:                          #222D31
URxvt*color8:                          #585858

!! red dark/light
URxvt*color1:                          #ab4642
URxvt*color9:                          #ab4642

!! green dark/light
URxvt*color2:                          #7E807E
URxvt*color10:                         #8D8F8D

!! yellow dark/light
URxvt*color3:                          #f7ca88
URxvt*color11:                         #f7ca88

!! blue dark/light
URxvt*color4:                          #7cafc2
URxvt*color12:                         #7cafc2

!! magenta dark/light
URxvt*color5:                          #ba8baf
URxvt*color13:                         #ba8baf

!! cyan dark/light
URxvt*color6:                          #1ABB9B
URxvt*color14:                         #1ABB9B

!! white dark/light
URxvt*color7:                          #d8d8d8
URxvt*color15:                         #f8f8f8

Xcursor.theme: xcursor-breeze
Xcursor.size:                     0

!-- urxvt settings -- !

URxvt.font:                       xft:DejaVu Sans Mono for Powerline:size=14
URxvt.boldFont:                   xft:DejaVu Sans Mono for Powerline:bold:size=14
URxvt.depth:                      32

URxvt*internalBorder:             20
URxvt*scrollBar:                  false
URxvt*mouseWheelScrollPage:       false
URxvt*cursorBlink:                true

URxvt.background:                 [100]#222D31
URxvt*foreground:                 grey

URxvt*saveLines:                  5000

! Normal copy-paste keybindings without perls
URxvt.iso14755:                   false
URxvt.keysym.Shift-Control-V:     eval:paste_clipboard
URxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard
!Xterm escape codes, word by word movement
URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Shift-Control-Left:  \033[1;6D
URxvt.keysym.Control-Right:       \033[1;5C
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Shift-Control-Up:    \033[1;6A
URxvt.keysym.Control-Down:        \033[1;5B
URxvt.keysym.Shift-Control-Down:  \033[1;6B
